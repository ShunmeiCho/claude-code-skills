{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(npm test:*)",
      "Bash(npm run:*)",
      "Bash(python -m pytest:*)",
      "Read(*)"
    ],
    "deny": [
      "Read(.env)",
      "Read(.env.*)",
      "Read(**/*credentials*)",
      "Read(**/*secret*)"
    ]
  },
  "env": {
    "CLAUDE_PROJECT_TYPE": "dotclaude-config"
  }
}
